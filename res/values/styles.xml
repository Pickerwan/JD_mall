<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SplashBaseTheme" parent="android:Theme.Light.NoTitleBar"></style>

    <!-- 应用主题 -->
    <style name="SplashTheme" parent="SplashBaseTheme"></style>

    <!-- 咨询版块 -->
    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- ******* 资讯信息Layout样式  ******* -->
    <style name="title_layout">

        <!-- 大标题栏布局 -->
        <item name="android:layout_height">47dip</item>
        <item name="android:layout_width">fill_parent</item>
        <!-- <item name="android:background">@drawable/top_title</item> -->
        <item name="android:background">@android:color/holo_purple</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="top_back_btn">

        <!-- <item name="android:background">@drawable/top_back_btn_selector</item> -->
        <item name="android:background">@drawable/flight_title_back_normal</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_width">40dip</item>
    </style>

    <!-- ******* textview样式  ******* -->
    <style name="title_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="title_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:background">@drawable/title_line</item>
    </style>

    <style name="AnimationPop">
        <item name="android:windowEnterAnimation">@anim/in_from_down</item>
        <item name="android:windowExitAnimation">@anim/out_to_down</item>
    </style>

    <!-- ******* 资讯信息Layout样式  ******* -->


    <!-- SplashActivity theme. -->
    <style name="SplashTheme_NoAnimation" parent="SplashBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation</item>
    </style>

    <style name="Animation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <!-- Category list style -->
    <style name="CategoryListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/category_list_items</item>
        <item name="android:textColor">@color/category_list_items_text</item>
    </style>

    <!-- 标题栏 -->
    <style name="TopbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topbar_height</item>
        <item name="android:background">@drawable/drawable_topbar_bg</item>
    </style>

    <!-- 筛选菜单ToggleButton -->
    <style name="FilterToggleButton">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:background">@drawable/btn_order_ellipse</item>
    </style>

    <!-- 我的云天团菜单 -->
    <style name="MineItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_middle</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 下载按钮 -->
    <style name="commonBtn">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/pd_btn1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="title_update_progressbar_style">
        <item name="android:maxWidth">45.0dip</item>
        <item name="android:maxHeight">45.0dip</item>
        <item name="android:indeterminateDrawable">@anim/title_update_anim</item>
        <item name="android:minWidth">45.0dip</item>
        <item name="android:minHeight">45.0dip</item>
    </style>

    <style name="ActionBarProgressBar" parent="@style/title_update_progressbar_style"></style>

    <style name="table_special_vertical_line">

        <!-- 表 中长竖线 -->
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:background">#dadada</item>
    </style>

    <style name="left_drawer_item_layout">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/left_drawer_item_bg</item>
        <item name="android:paddingLeft">40.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50.0dip</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="left_drawer_item_text">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/left_drawer_item_text</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">9.0dip</item>
        <item name="android:paddingBottom">9.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">25.0dip</item>
    </style>

    <style name="left_drawer_item_line">
        <item name="android:background">@color/left_drawer_item_line</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
    </style>

    <style name="top_update_count">
        <item name="android:textSize">10.0sp</item>
        <item name="android:textColor">#ffcc3131</item>
        <item name="android:gravity">center</item>
        <item name="android:height">15.0dip</item>
        <item name="android:width">15.0dip</item>
    </style>
    
    <style name="left_drawer_count" parent="@style/top_update_count">
        <item name="android:textSize">8.0sp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

</resources>